<div class="col-lg-7">
  <% if success? %>
      <div>
        <div class="col-lg-12">
          <div >
            <h2><%= "#{city}, #{country}"%></h2>
            <p><%= description %></p>
          </div>
        </div>
        <%= image_tag temp_icon, width:"128", height:"128" %>
        <div class="col-lg-4">
          <%= link_to "Refresh", weathers_path, class: "btn btn-primary refresh" %>
        </div>
        <%= render(partial: 'summary') %>
      </div>
  <% else %>
      <h1><%=  @message %></h1>
  <% end %>
  <div>
    <div>
      <a href="http://openweathermap.org/" target="_blank">OpenWeatherMap</a>
    </div>
  </div>
</div>
<div class="col-lg-5">
  <div>
    <%= form_tag weathers_search_path, method: :get do |f| %>
        <div class="form-group">
          <%= label_tag :city %><br>
          <%= text_field_tag :city, params[:city] || nil, class: "form-control", placeholder: "#{params[:city]}" %>
        </div>
        <div class="form-group">
          <%= label_tag :country_code %><br>
          <%= text_field_tag :country_code, params[:country_code] || nil, class: "form-control" %>
        </div>
        <div class="actions">
          <%= submit_tag "submit", class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>

