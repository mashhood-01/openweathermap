<div class="col-lg-7">
  <div>
    <div class="col-lg-12">
      <div >
        <h2><%= "#{city}, #{country}"%></h2>
        <p><%= description %></p>
      </div>
    </div>
    <%= image_tag temp_icon, width:"128", height:"128" %>
    <div class="col-lg-4">
      <%= link_to "Refresh", weathers_path, class: "btn btn-primary refresh" %>
    </div>
  </div>
  <%= render partial: 'summary' %>
  <div>
    <div>
      <a href="http://openweathermap.org/" target="_blank">OpenWeatherMap</a>
    </div>
  </div>
</div>
<div class="col-lg-5">
  <div>
    <%= form_tag(:weathers) do |f| %>
      <div class="form-group">
        <%= label_tag :city %><br>
        <%= text_field_tag :city, nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :country %><br>
        <%= text_field_tag :country, nil, class: "form-control" %>
      </div>
      <div class="actions">
        <%= submit_tag "submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

</div>

