<div class="col-lg-5">
  <h3> Search By</h3>
  <%= form_tag weathers_search_path, method: :get do |f| %>
    <div class="form-group">
      <%= label_tag :city %><br>
      <%= text_field_tag :city, params[:city] || nil, class: "form-control", placeholder: "#{params[:city]}" %>
    </div>
    <div class="form-group">
      <%= label_tag :country_code %><br>
      <%= text_field_tag :country_code, params[:country_code] || nil, class: "form-control" %>
    </div>
    <div class="actions">
      <%= submit_tag "submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
